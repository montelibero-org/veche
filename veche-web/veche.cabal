cabal-version: 1.12
name:          veche
version:       2022.10.9.2
build-type:    Simple

library
  default-extensions: EmptyCase
  exposed-modules:
    Application
    Authorization
    Database.Persist.Extra
    Form
    Foundation
    Foundation.Base
    Genesis
    Handler.Admin
    Handler.API
    Handler.Comment
    Handler.Common
    Handler.Dashboard
    Handler.Forum
    Handler.Issue
    Handler.Telegram
    Handler.User
    Import
    Import.NoFoundation
    Model
    Model.Comment
    Model.Event
    Model.Forum
    Model.Issue
    Model.Request
    Model.StellarHolder
    Model.StellarSigner
    Model.Telegram
    Model.Types
    Model.User
    Model.Verifier
    Model.Vote
    Paths_veche
    Settings
    Settings.StaticFiles
    Templates.Comment
    Templates.DefaultLayout
    Templates.Issue
    Templates.User
    Workers.StellarUpdate
    Workers.Telegram

  hs-source-dirs:     src
  build-depends:
      aeson
    , base               >=4.9.1.0 && <5
    , blaze-html
    , case-insensitive
    , classy-prelude
    , containers
    , data-default
    , Decimal
    , esqueleto
    , fast-logger
    , file-embed
    , hjsmin             >=0.1     && <0.3
    , http-client
    , http-client-tls    >=0.3     && <0.4
    , http-types
    , monad-logger       >=0.3     && <0.4
    , path-pieces
    , persistent
    , persistent-sqlite
    , random
    , servant-client
    , shakespeare        >=2.0     && <2.1
    , telegram-api
    , template-haskell
    , text               >=0.11    && <2.0
    , time
    , wai
    , wai-extra
    , warp               >=3.0     && <3.4
    , yaml               >=0.11    && <0.12
    , yesod              >=1.6     && <1.7
    , yesod-auth         >=1.6     && <1.7
    , yesod-core         >=1.6     && <1.7
    , yesod-form         >=1.7.3
    , yesod-persistent
    , yesod-static       >=1.6     && <1.7

  -- project
  build-depends:
      stellar-horizon
    , yesod-auth-stellar

  default-language:   Haskell2010
  ghc-options:        -O2

executable veche
  main-is:          main.hs
  other-modules:    DevelMain
  hs-source-dirs:   app
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N -O2
  build-depends:
      base           >=4.9.1.0 && <5
    , foreign-store
    , warp           >=3.0     && <3.4

  -- package
  build-depends:    veche
  default-language: Haskell2010

test-suite veche-test
  type:             exitcode-stdio-1.0
  main-is:          Spec.hs
  other-modules:
    Auth.StellarSpec
    Handler.CommonSpec
    Handler.UserSpec
    Model.EventSpec
    Model.VoteSpec
    TestImport

  hs-source-dirs:   test
  ghc-options:      -Wall
  build-depends:
      base               >=4.9.1.0 && <5
    , base64-bytestring
    , classy-prelude     >=1.5     && <1.6
    , hedgehog
    , hspec              >=2.0.0
    , HUnit
    , microlens
    , monad-logger       >=0.3     && <0.4
    , mtl
    , persistent
    , persistent-sqlite
    , servant-server
    , stellar-sdk
    , text               >=0.11    && <2.0
    , veche
    , wai
    , warp
    , xml-conduit
    , yesod              >=1.6     && <1.7
    , yesod-auth         >=1.6     && <1.7
    , yesod-core         >=1.6     && <1.7
    , yesod-persistent
    , yesod-test

  -- project
  build-depends:    stellar-horizon
  default-language: Haskell2010
